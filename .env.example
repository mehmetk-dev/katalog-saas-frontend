# -----------------------------------------------------------------------------
# SUPABASE CONFIGURATION
# Supabase projenizden alacağınız API anahtarları.
# Dashboard -> Project Settings -> API kısmında bulabilirsiniz.
# -----------------------------------------------------------------------------
NEXT_PUBLIC_SUPABASE_URL=https://your-project.supabase.co
NEXT_PUBLIC_SUPABASE_ANON_KEY=your-anon-key

# Admin işlemleri için gereklidir (Service Role - Secret!).
# Bu anahtarı ASLA client tarafında kullanmayın.
SUPABASE_SERVICE_ROLE_KEY=your-service-role-key

# -----------------------------------------------------------------------------
# APPLICATION CONFIGURATION
# Uygulamanın çalışacağı temel URL'ler.
# -----------------------------------------------------------------------------
# Frontend URL (Development için localhost:3000)
NEXT_PUBLIC_APP_URL=http://localhost:3000

# Backend API URL (Express sunucusu)
NEXT_PUBLIC_API_URL=http://localhost:4000/api/v1

# -----------------------------------------------------------------------------
# ADMIN CONFIGURATION
# Admin paneline erişim yetkisi olan e-posta adresi.
# Giriş yaptığınız hesap bu email ile eşleşmelidir.
# -----------------------------------------------------------------------------
ADMIN_EMAIL=admin@example.com

# -----------------------------------------------------------------------------
# EMAIL (RESEND) CONFIGURATION
# -----------------------------------------------------------------------------
RESEND_API_KEY=re_your_api_key
RESEND_FROM_EMAIL=your@email.com

# -----------------------------------------------------------------------------
# SENTRY MONITORING
# -----------------------------------------------------------------------------
SENTRY_AUTH_TOKEN=your_sentry_token

# -----------------------------------------------------------------------------
# STORAGE (CLOUDINARY) CONFIGURATION
# -----------------------------------------------------------------------------
NEXT_PUBLIC_STORAGE_PROVIDER=cloudinary
NEXT_PUBLIC_CLOUDINARY_CLOUD_NAME=your_cloud_name
NEXT_PUBLIC_CLOUDINARY_UPLOAD_PRESET=your_upload_preset

# [DİKKAT] Aşağıdaki Cloudinary Key/Secret SADECE BACKEND için gereklidir, 
# ancak root seviyesinde de referans olarak tutulması faydalıdır.
CLOUDINARY_API_KEY=your_api_key
CLOUDINARY_API_SECRET=your_api_secret
CLOUDINARY_CLOUD_NAME=your_cloud_name
CLOUDINARY_DELETED_FOLDER=deleted-images

# -----------------------------------------------------------------------------
# OPTIONAL SERVICES
# -----------------------------------------------------------------------------
# Redis Caching (Opsiyonel)
# REDIS_URL=redis://default:password@host:port

# -----------------------------------------------------------------------------
# SECURITY CONFIGURATION
# Backend API için CORS ayarları 
# -----------------------------------------------------------------------------
# Virgülle ayrılmış izin verilen origin'ler (production'da değiştirin!)
ALLOWED_ORIGINS=http://localhost:3000,http://127.0.0.1:3000
